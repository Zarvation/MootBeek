<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWidgetBackgroundColor"
    android:padding="@dimen/widget_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/availRoomWidget"
    android:theme="@style/ThemeOverlay.MeetBook.AppWidgetContainer">

    <TextView
        android:id="@+id/availText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginVertical="3dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:contentDescription="available room"
        android:text="Available Room in MeetBook:"
        android:fontFamily="@font/caviardreams"
        android:textColor="@color/bluelogo"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/availRoomText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/bluelogo"
        android:contentDescription="RoomText"
        android:text="Room 1A with Capacity 8 seats"
        android:fontFamily="@font/caviardreams"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/actionsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/bluelogo"
        android:contentDescription="warp"
        android:text="Book now!"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />
</LinearLayout>