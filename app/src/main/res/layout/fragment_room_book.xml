<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp"
    tools:context=".fragments.RoomBookFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/BookMeetRoomTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/caviardreamsbold"
        android:text="Room 1A"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/BookMeetRoomCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/caviardreams"
        android:text="8 Seats"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/BookMeetRoomImg"
        android:layout_width="600dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/StartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:inputType="time"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/caviardreamsbold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:clickable="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:fontFamily="@font/caviardreamsbold"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/EndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:inputType="time"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/caviardreamsbold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:clickable="true"
            />
    </LinearLayout>
    <Button
        android:id="@+id/BookBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book"
        android:layout_gravity="center"/>

    <!--<ProgressBar
        android:id="@+id/MeetingProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center"/>-->
    <TextView
        android:id="@+id/Quotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />


</LinearLayout>