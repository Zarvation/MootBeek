<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp"
    tools:context=".fragments.RoomBookFragment">

    <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/BookMeetRoomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caviardreamsbold"
            android:text="Room 1A"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/BookMeetRoomCap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caviardreams"
            android:text="8 Seats"
            android:textColor="@color/black"
            android:textSize="14dp" />

    <ImageView
        android:id="@+id/BookMeetRoomImg"
        android:layout_width="600dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:src="@drawable/meetroom1" />

</LinearLayout>