<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appWidgetBackgroundColor"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.MeetBook.AppWidgetContainer"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/meetingInfoWidget">

    <TextView
        android:id="@+id/meetbookText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:contentDescription="Meeting At"
        android:text="MeetBook"
        android:fontFamily="@font/caviardreams"
        android:textColor="@color/bluelogo"
        android:layout_marginVertical="3dp"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:contentDescription="Meeting At"
        android:text="You have a meeting at Room 1"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/actionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:contentDescription="warp"
        android:text="Click to Warp"
        android:textColor="@color/greenlogin"
        android:textSize="15sp"
        android:textStyle="italic" />
</LinearLayout>